section
  .container
    h2= @user.email
    - if current_user.eql?(@user)
      = link_to "Register Tmoney", register_tmoney_users_path
    h4= "Point: #{@user.point}"
    p
      = "#{@user.followers_count} followers"
      br
      = "#{@moments.size} moments"
    - if user_signed_in? && !current_user.eql?(@user) 
      - if current_user.following?(@user)
        = link_to "Unfollow", unfollow_user_path(@user)
      - else
        = link_to "Follow", follow_user_path(@user)
    = render "gallery"
